{
    "autoload": {
        "psr-4": {
            "App\\config\\": "config/",
            "App\\src\\": "src/"
        }
    },
    "require": {
        "ckeditor/ckeditor": "dev-standard/stable",
        "twbs/bootstrap": "4.5.3",
        "components/jquery": "3.5.1"
    },
    "config": {
        "component-dir": "vendor"
    },
    "scripts": {
        "post-update-cmd": [
            "rm -rf public/lib/ckeditor",
            "cp -R vendor/ckeditor/ckeditor public/lib/ckeditor",
            "rm -rf public/lib/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist public/lib/bootstrap",
            "rm -rf public/lib/jquery",
            "cp -R vendor/components/jquery public/lib/jquery"
        ]
    }
}